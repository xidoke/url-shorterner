{
	"name": "@xidoke/url-shortener-api",
	"version": "0.0.1",
	"description": "URL Shortener API",
	"author": "Xidoke",
	"private": true,
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": ">=22.0.0",
		"pnpm": ">=10.0.0"
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch --onSuccess \"node dist/main.js\"",
		"check-types": "tsc --noEmit",
		"start": "node dist/main.js",
		"start:dev": "tsup --watch --onSuccess \"node dist/main.js\"",
		"start:debug": "tsup --watch --onSuccess \"node --inspect dist/main.js\"",
		"start:prod": "node dist/main.js",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json"
	},
	"dependencies": {
		"@nestjs/common": "^11.1.7",
		"@nestjs/core": "^11.1.7",
		"@nestjs/jwt": "^11.0.1",
		"@nestjs/passport": "^11.0.5",
		"@nestjs/platform-express": "^11.1.7",
		"@prisma/client": "^6.18.0",
		"@xidoke/api-standards": "workspace:*",
		"@xidoke/auth": "workspace:*",
		"@xidoke/database": "workspace:*",
		"@xidoke/rate-limit": "workspace:*",
		"@xidoke/types": "workspace:*",
		"bcrypt": "^6.0.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.2",
		"dotenv": "^17.2.3",
		"ioredis": "^5.8.2",
		"passport-jwt": "^4.0.1",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.2"
	},
	"devDependencies": {
		"@nestjs/cli": "^11.0.10",
		"@nestjs/schematics": "^11.0.9",
		"@nestjs/testing": "^11.1.7",
		"@repo/typescript-config": "workspace:*",
		"@types/bcrypt": "^6.0.0",
		"@types/express": "^5.0.4",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.9.1",
		"@types/passport-jwt": "^4.0.1",
		"@types/supertest": "^6.0.3",
		"globals": "^16.0.0",
		"jest": "^30.2.0",
		"prisma": "^6.18.0",
		"source-map-support": "^0.5.21",
		"supertest": "^7.1.4",
		"ts-jest": "^29.4.5",
		"ts-loader": "^9.5.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.9.3"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
